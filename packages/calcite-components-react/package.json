{
  "name": "@esri/calcite-components-react",
  "version": "3.0.0-next.127",
  "description": "A set of React components that wrap calcite components",
  "homepage": "https://developers.arcgis.com/calcite-design-system/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Esri/calcite-design-system.git",
    "directory": "packages/calcite-components-react"
  },
  "license": "SEE LICENSE.md",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rimraf dist && npm run compile",
    "clean": "rimraf dist node_modules .turbo",
    "compile": "npm run tsc",
    "lint": "concurrently npm:lint:*",
    "lint:json": "prettier --write \"**/*.json\" >/dev/null",
    "lint:md": "prettier --write \"**/*.md\" >/dev/null && markdownlint \"**/*.md\" --fix --dot --ignore-path ../../.gitignore",
    "tsc": "tsc"
  },
  "dependencies": {
    "@esri/calcite-components": "3.0.0-next.127",
    "@lit/react": "1.0.7"
  },
  "peerDependencies": {
    "react": ">=18.3",
    "react-dom": ">=18.3"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
