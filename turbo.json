{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["MODE"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["**/dist/**", "hydrate/**", "docs/**"]
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {},
    "clean": {
      "cache": false
    },
    "lint": {},
    "util:update-3rd-party-licenses": {
      "cache": false
    }
  }
}
