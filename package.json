    "stylelint-use-logical-spec": "5.0.1",
    "tailwindcss": "3.4.17",
    "tsx": "4.19.3",
    "turbo": "2.5.3",
    "type-fest": "4.40.0",
    "typescript": "5.6.3",
    "typescript-eslint": "8.30.1",
    "typescript-strict-plugin": "2.4.4",
    "vite": "5.4.18",
    "vite-plugin-dts": "4.5.3"
  },
  "license": "SEE LICENSE.md",
